{
  "name": "kestra",
  "displayName": "Kestra",
  "description": "Kestra extension for VSCode to bring you smart autocompletion for your flows",
  "version": "0.1.7",
  "icon": "images/icon.png",
  "publisher": "kestra-io",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "capabilities": {
    "virtualWorkspaces": true
  },
  "activationEvents": [
    "onFileSystem:kestra",
    "onLanguage:yaml"
  ],
  "main": "./dist/web/extension.js",
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kestra.schema.download",
        "title": "Download Kestra schema"
      }
    ],
    "configuration": {
      "title": "Kestra",
      "properties": {
        "kestra.api.url": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specify the api root url."
        }
      }
    }
  },
  "scripts": {
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ],
  "devDependencies": {
    "@types/eslint": "^8.44.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.6.3",
    "@types/node-fetch": "^2.6.5",
    "@types/vscode": "^1.82.0",
    "@types/webpack-env": "^1.18.1",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-web": "^0.0.45",
    "assert": "^2.0.0",
    "eslint": "^8.47.0",
    "mocha": "^10.2.0",
    "process": "^0.11.10",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "node-fetch": "^2.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kestra-io/vscode-kestra.git"
  }
}
